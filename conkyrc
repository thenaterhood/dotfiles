# Transparency
#
# Give conky a semi-transparent background
own_window_argb_visual yes
own_window_argb_value 125
own_window_colour 000000
own_window yes
# Set up full transparency
own_window_transparent no
#own_window_argb_visual yes
own_window_type desktop
#own_window_class conky-semi
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# End section
alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_color 656667
default_outline_color 000000
default_shade_color 828282
draw_borders no
draw_graph_borders yes
draw_outline yes
draw_shades no
use_xft yes
xftalpha 1
xftfont Lucida Sans:size=9
gap_x 5
gap_y 44
minimum_size 200 724
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
#own_window_class Conky
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes
rounded 50

TEXT
# Name and sysname
#
#${font Radio Space:size=20}${color 8df2a1}${execi 3600 whoami}${color b9d775}
#${font Radio Space:size=12}${color 8df2a1}$sysname $kernel
#${color grey}$hr
#
# General networking/IP addresses
#
${font Liberation Sans:size=9}
${color 00bfff}${font Radio Space:size=9}N E T W O R K I N G $font
${color grey}$hr
WLAN:  $alignr ${addr wlan0}
# Shows the wireless signal strength if wireless is connected
${if_match "${addr wlan0}" == "No Address"}\
${else}\
${if_match ${wireless_link_qual_perc wlan0} <= 55}\
${color orange}\
${endif}\
	+Signal: $alignr ${wireless_link_qual_perc wlan0}%
${color grey}\
	+ESSID: $alignr ${wireless_essid wlan0}
	+Up: $alignr ${upspeed wlan0}
	+Down: $alignr ${downspeed wlan0}

${endif}\
LAN: $alignr ${addr eth0}
${if_match "${addr eth0}" == "No Address"}\
${else}\
#	+Signal: $alignr ${wireless_link_qual_perc wlan0}%
	+Up: $alignr ${upspeed eth0}
	+Down: $alignr ${downspeed eth0}

${endif}\
WAN: $alignr ${execi 60 curl http://icanhazip.com}
#
# Basic system info
#


${color 00bfff}${font Radio Space:size=9}S Y S T E M  I N F O$font
${color grey}$hr
Host: $alignr $nodename
# Adds "(plugged in)" after the battery if the system is plugged in
Battery${if_existing /sys/class/power_supply/ADP1/online 1} (plugged in):\
${else}:\
${endif}\
# Changes the color of the battery percent to red if the battery is low
$alignr ${if_match ${battery_percent BAT0} <= 20}\
${color ff0000}\
${else}\
${if_existing /sys/class/power_supply/ADP1/online 1}\
${else}${color grey}\
${endif}\
${endif}\
${battery_percent}%\
${color grey}
#${color grey}Frequency (in MHz):$color $freq
#${color grey}Frequency (in GHz):$color $freq_g
RAM Usage:$alignr $memperc%
#${color grey}Swap Usage:$color $alignr $swapperc%
CPU Usage:$alignr $cpu%
Up: $alignr $uptime
Kernel: $alignr $kernel
Processes:$alignr $processes
#  ${color grey}Running:$color $running_processes


#
# File system info
#
${color 00bfff}${font Radio Space:size=9}F I L E S Y S T E M S $font
${color grey}$hr
# fs bar, orange when drive is over 70% full
/ $alignr ${fs_used /}/${fs_size /} (${fs_used_perc /}%)
${if_match ${fs_used_perc /} >= 70}\
${color orange}\
${else}\
${color grey}\
${endif}\
${fs_bar 3 /}
# Provides a percentage and fs bar (orange when drive is over 70% full)
/home $alignr ${fs_used /home}/${fs_size /home} (${fs_used_perc /home}%)
${if_match ${fs_used_perc /home} >= 70}\
${color orange}\
${else}\
${color grey}\
${endif}\
${fs_bar 3 /home}
# Provides a percentage and filesystem bar (turns orange when drive is more than 70% full)
Windows $alignr ${fs_used /mnt/windows_seven/}/${fs_size /mnt/windows_seven/} (${fs_used_perc /mnt/windows_seven/}%)
${if_match ${fs_used_perc /mnt/windows_seven} >= 70}\
${color orange}\
${else}\
${color grey}\
${endif}${fs_bar 3 /mnt/windows_seven/}
${color grey}
#$hr

#${font radiospace:size=12}${color 8df2a1}${time %A %d %Y}
#${font Radio Space:size=20}${color 8df2a1}${time %H:%M}


