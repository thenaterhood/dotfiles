# Transparency 
own_window yes
own_window_transparent yes
own_window_argb_visual yes
own_window_type normal
own_window_class conky-semi
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# End section
alignment top_right
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color black
default_shade_color black
draw_borders no
draw_graph_borders yes
draw_outline yes
draw_shades no
use_xft yes
xftfont Droid Sans:size=12
gap_x 5
gap_y 35
minimum_size 10 10
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes
green1 b9d775
color2 F8DF58
radiospace Radio Space

TEXT
# Name and sysname
#
${font Radio Space:size=25}${color 8df2a1}${execi 3600 whoami}${color b9d775}
${font Radio Space:size=14}${color 8df2a1}$sysname $kernel
#${color grey}$hr
#
# IP addresses
#
${font Ubuntu:size=11.5}
${color grey}WLAN (${wireless_essid wlan0}):  $alignr $color ${addr wlan0}
${color grey}LAN: $alignr $color ${addr eth0}
${color grey}WAN: $alignr $color ${execi 60 curl http://icanhazip.com}
${color grey}$hr
#
# Basic system info
#
${color grey}Battery${if_existing /sys/class/power_supply/ADP1/online 1} (plugged in):${else}:${endif} $alignr ${if_match ${battery_percent BAT0} <= 20}${color ff0000}${battery_percent}%${else}${if_existing /sys/class/power_supply/ADP1/online 1}$color${battery_percent}%${else}${color1}${battery_percent}%${endif}${endif}
#${color grey}Frequency (in MHz):$color $freq
#${color grey}Frequency (in GHz):$color $freq_g
${color grey}RAM Usage:$color $alignr $memperc%
#${color grey}Swap Usage:$color $alignr $swapperc%
${color grey}CPU Usage:$color $alignr $cpu%
${color grey}Up: $alignr $color $uptime
${color grey}Processes:$color $alignr $processes
#  ${color grey}Running:$color $running_processes
${color grey}$hr
#
# File system info
#
${color grey}Primary file systems:
${color grey}/ $alignr $color${fs_used /}/${fs_size /} (${fs_used_perc /}%)
#${fs_bar 6 /}
${color grey}/home $alignr $color${fs_used /home}/${fs_size /home} (${fs_used_perc /home}%)
#${fs_bar 6 /home}
${color grey}Windows $alignr $color${fs_used /mnt/windows_seven/}/${fs_size /mnt/windows_seven/} (${fs_used_perc /mnt/windows_seven/}%)
#${fs_bar 6 /mnt/windows_seven/}
#$hr

${font radiospace:size=14}${color 8df2a1}${time %A %d %Y}
${font Radio Space:size=25}${color 8df2a1}${time %H:%M}


